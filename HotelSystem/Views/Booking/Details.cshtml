@model HotelSystem.Models.Booking

@{
    ViewBag.Title = "Details of Booking";
}



@using (Html.BeginForm("Update", "Booking", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Room Id</th>
                <th>Customer Id</th>
                <th>Check In Date</th>
                <th>Check Out Date</th>
                <th>Total Amount</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(m => m.Id)</td>
                <td>@Html.TextBoxFor(m => m.RoomId)</td>
                <td>@Html.TextBoxFor(m => m.CustomerId)</td>
                <td>@Html.TextBoxFor(m => m.CheckInDate, "{0:yyyy-MM-dd-hh-mm}")</td>
                <td>@Html.TextBoxFor(m => m.CheckOutDate, "{0:yyyy-MM-dd-hh-mm}")</td>
                <td>@Html.TextBoxFor(m => m.TotalAmount)</td>
                <td>@Html.TextBoxFor(m => m.Note)</td>
               
                <td>
                    <input type="submit" value="Update" class="btn btn-success" />
                </td>
            </tr>
        </tbody>
    </table>
}
@using (Html.BeginForm("Delete", "Booking", new { Id = Model.Id }, FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <input type="submit" value="Delete" class="btn btn-danger" />
}



